@page "/"
@using System.Reflection
@using MudBlazor
@using MudBlazor.Components
@inject NavigationManager NavigationManager

<MudSimpleTable>
    <MudPaper align-center>
        @foreach (var cat in categories)
        {
            <MudTr>
                <MudTd>
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="()=>ShowCategory(cat)">@cat</MudButton>
                    </MudTd>
                </MudTr>
        }
    </MudPaper>
</MudSimpleTable>




@code {
    private List<string> categories = new List<string>();


    protected override void OnInitialized()
    {
        categories = ImageService.Instance.GetCategories();
    }

    protected void ShowCategory(string category)
    {
        NavigationManager.NavigateTo($"Category/{category}");
    }

}
